@page
@model DataHappy.Pages.Conferences.IndexModel

@{
    ViewData["Title"] = "Index";
}

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4">Conferences</h1>
            <p class="lead">I have a great motivation to participate in many conferences to update my skills and create networking. I build this web page using ASP.NET Core with MVC razor pages and Entity Framework (EF) Core. </p>
        </div>
    </div>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Conference[0].City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Conference) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
